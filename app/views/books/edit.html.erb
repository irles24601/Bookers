<body>
  <h1>Editing Book</h1>

  <% if flash[:error_messages] %>
  <div id="error_explanation">
    <h2>errors prohibited this book from being saved:</h2>
    <ul>
      <% flash[:error_messages].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_for(@book) do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>

  <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</body>
